{
  "name": "Web Resource Vault",
  "version": "2.0.6",
  "description": "Store and download all your web resources, manteniendo la estructura de carpetas.",
  "author": "up209d",
  "homepage_url": "https://github.com/up209d/ResourcesSaverExt",
  "icons": {
    "128": "icon.png"
  },
  "action": {
    "default_icon": "icon.png",
    "default_title": "Web Resource Vault",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "tabs", 
    "downloads", 
    "downloads.shelf",
    "storage",
    "notifications",
    "proxy",
    "system.storage",
    "background"
  ],
  "host_permissions": ["http://*/", "https://*/"],
  "optional_host_permissions": ["*://*/*"],
  "devtools_page": "devtool.html",
  "manifest_version": 3
}
